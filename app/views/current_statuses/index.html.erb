<p id="notice"><%= notice %></p>

<h1>Current Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Percentage profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_statuses.each do |current_status| %>
      <tr>
        <td><%= current_status.name %></td>
        <td><%= current_status.description %></td>
        <td><%= current_status.percentage_profile %></td>
        <td><%= link_to 'Show', current_status %></td>
        <td><%= link_to 'Edit', edit_current_status_path(current_status) %></td>
        <td><%= link_to 'Destroy', current_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

